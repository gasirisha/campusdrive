{
  "info": {
    "name": "CampusDrive API",
    "_postman_id": "campusdrive-collection-001",
    "description": "Postman collection for CampusDrive Spring Boot project",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Init Sample Data",
      "request": {
        "method": "POST",
        "header": [],
        "url": { "raw": "{{baseUrl}}/api/init", "host": ["{{baseUrl}}"], "path": ["api", "init"] }
      }
    },
    {
      "name": "Create College",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"name\": \"Test College\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/colleges", "host": ["{{baseUrl}}"], "path": ["api", "colleges"] }
      }
    },
    {
      "name": "Create Student",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"collegeId\": 1,\n  \"studentRegNo\": \"D001\",\n  \"name\": \"Dana\",\n  \"email\": \"dana@example.com\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/students", "host": ["{{baseUrl}}"], "path": ["api", "students"] }
      }
    },
    {
      "name": "Create Event",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"collegeId\": 1,\n  \"title\": \"New Seminar\",\n  \"description\": \"Tech Seminar\",\n  \"eventType\": \"Seminar\",\n  \"capacity\": 50,\n  \"startTime\": \"2025-09-15T10:00:00\",\n  \"endTime\": \"2025-09-15T14:00:00\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/events", "host": ["{{baseUrl}}"], "path": ["api", "events"] }
      }
    },
    {
      "name": "Register Student",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"eventId\": 1,\n  \"studentId\": 4\n}" },
        "url": { "raw": "{{baseUrl}}/api/register", "host": ["{{baseUrl}}"], "path": ["api", "register"] }
      }
    },
    {
      "name": "Mark Attendance",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"eventId\": 1,\n  \"studentId\": 4\n}" },
        "url": { "raw": "{{baseUrl}}/api/attendance", "host": ["{{baseUrl}}"], "path": ["api", "attendance"] }
      }
    },
    {
      "name": "Submit Feedback",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"eventId\": 1,\n  \"studentId\": 4,\n  \"rating\": 5,\n  \"comments\": \"Amazing event!\"\n}" },
        "url": { "raw": "{{baseUrl}}/api/feedback", "host": ["{{baseUrl}}"], "path": ["api", "feedback"] }
      }
    },
    {
      "name": "Report - Registrations",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/reports/registrations", "host": ["{{baseUrl}}"], "path": ["api", "reports", "registrations"] } }
    },
    {
      "name": "Report - Attendance %",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/reports/attendance-percentage?eventId=1", "host": ["{{baseUrl}}"], "path": ["api", "reports", "attendance-percentage"], "query": [{ "key": "eventId", "value": "1" }] } }
    },
    {
      "name": "Report - Avg Feedback",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/reports/average-feedback?eventId=1", "host": ["{{baseUrl}}"], "path": ["api", "reports", "average-feedback"], "query": [{ "key": "eventId", "value": "1" }] } }
    },
    {
      "name": "Report - Student Participation",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/reports/student-participation?studentId=4", "host": ["{{baseUrl}}"], "path": ["api", "reports", "student-participation"], "query": [{ "key": "studentId", "value": "4" }] } }
    },
    {
      "name": "Report - Popularity",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/reports/popularity?limit=10", "host": ["{{baseUrl}}"], "path": ["api", "reports", "popularity"], "query": [{ "key": "limit", "value": "10" }] } }
    }
  ]
}
